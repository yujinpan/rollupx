{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/__specs__/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
  ],
}
